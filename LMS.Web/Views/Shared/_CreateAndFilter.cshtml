@model LMS.Web.Models.ToDoListStatusPriorityViewModel


    <p>
        <div class="d-flex pt-2">

            <p class="pe-5">
                <a asp-action="Create"  class="btn btn-success btn-lg">
                    <i class="bi bi-plus-lg"></i> Create New
                </a>
            </p>
             &nbsp;&nbsp; &nbsp;&nbsp;
            <div class="ps-5">
                @*Status:*@
                <select asp-for="ToDoListStatus" asp-items="Model.Statuses"  class="btn btn-success btn-lg">    
                    <option value="" class="dropdown-item disabled">Status</option>
                </select>
            </div>
            &nbsp;&nbsp; &nbsp;&nbsp;
            <div class="ps-3">
                @*Priority:*@
                <select asp-for="ToDoListPriority" asp-items="Model.Priorities"  class="btn btn-success btn-lg">
                    <option value="" class="dropdown-item disabled">Priority</option>
                </select>
            </div>
            &nbsp;&nbsp; &nbsp;&nbsp;
            <div class="ps-3">
                @*Task:*@ 
                
                <input type="text" name="SearchString" class="form-control" placeholder="Task" />

            </div>
           
            <div class="ps-4">
                <input type="submit" value="Filter" class="btn btn-secondary my-2 my-sm-0" />
                  &nbsp;&nbsp; &nbsp;&nbsp;
                 <a asp-area="ToDoLists" asp-controller="ToDoLists" asp-action="index" class="btn btn-warning">Clear Filter</a>
            </div>
             
        </div>
    </p>
    
  
